{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "assignees": ["jquagga"],
  "rebaseWhen": "behind-base-branch",
  "lockFileMaintenance": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "docker-compose": {
    "enabled": true
  },
  "dockerfile": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
